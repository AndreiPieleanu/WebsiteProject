@page
@model NewsWebsite.Pages.LoginPageModel
@{
    ViewData["Title"] = "Login page";
    Layout = "";
}
<head>
    <link rel="stylesheet" href="css/site.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>
    <form method="post">
        <div class="login-parent">
            <div class="login-logo">
                <img src="images/logo.jpg" alt="logo" class="img-thumbnail" />
                <br />
                <h1>Welcome to NewsApp!</h1>
                <br />
                <p>The most trusted website for news & others!</p>
            </div>
            <div class="login-tbxUsername">
                <span class="text-danger" asp-validation-for="Email"></span>
                <input asp-for="Email" type="email" placeholder="Email" class="form-control" />
            </div>
            <div class="login-tbxPassword">
                <span class="text-danger" asp-validation-for="Password"></span>
                <input asp-for="Password" type="password" id="myPassword" placeholder="Password" class="form-control" />
            </div>
            <div class="login-btnVisible">
                <input type="checkbox" onclick="myFunction()">Show Password
            </div>
            <div class="login-btnLogin">
                <input type="submit" value="Login" class="btn btn-primary btn-lg" />
            </div>
            <div class="login-lblRegister">
                <p align="center">Don't have an account?</p>
                <a href="Register"><button type="button" class="btn btn-primary btn-lg">Register</button></a>
            </div>
        </div>
    </form>
</body>
<script>
    function myFunction() {
        var x = document.getElementById("myPassword");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
</script>