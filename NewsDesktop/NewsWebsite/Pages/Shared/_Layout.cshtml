@using System.Security.Claims;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NewsWebsite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NewsWebsite.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/font-awesome-4.7.0/css/font-awesome.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">NewsWebsite</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="list-group-item">
                                <i class="fa fa-search fa-fw" aria-hidden="true"></i>
                                <input type="search" placeholder="Search news/article" />
                            </a>
                            
                        </li>
                        <li class="nav-item">
                            <a class="list-group-item" asp-area="" asp-page="/Index"><i class="fa fa-home fa-fw" aria-hidden="true"></i>&nbsp; Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="list-group-item" asp-area="" asp-page="/Index"><i class="fa fa-id-card-o fa-fw" aria-hidden="true"></i>&nbsp; News</a>
                        </li>
                        <li class="nav-item">
                            <a class="list-group-item" asp-area="" asp-page="/Index"><i class="fa fa-question fa-fw" aria-hidden="true"></i>&nbsp; Did you know?</a>
                        </li>
                        <li class="nav-item">
                            <a class="list-group-item" asp-area="" asp-page="/Index"><i class="fa fa-dollar fa-fw" aria-hidden="true"></i>&nbsp; Donate</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="list-group-item" asp-area="" asp-page="/LogoutPage"><i class="fa fa-sign-out fa-fw" aria-hidden="true"></i>&nbsp; Logout</a>
                            </li>
                            <li class="nav-item">
                                <label class="form-label">Welcome, @(User.Identity.Name)</label>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="list-group-item" asp-area="" asp-page="/LoginPage"><i class="fa fa-sign-in fa-fw" aria-hidden="true"></i>&nbsp; Login</a>
                            </li>
                        }
                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - NewsWebsite - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
    @await Component.InvokeAsync("Notyf")
</body>
</html>